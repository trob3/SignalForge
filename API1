import logging
from contextlib import asynccontextmanager

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

from signalforge.api.routes import router

logger = logging.getLogger(__name__)


@asynccontextmanager
async def lifespan(app: FastAPI):
    logger.info("SignalForge starting up...")
    yield
    logger.info("SignalForge shutting down...")


app = FastAPI(
    title="SignalForge",
    version="0.1.0",
    description="Detection Quality Scoring & Alert Noise Optimizer (MVP)",
    lifespan=lifespan,
    docs_url="/docs",
    redoc_url="/redoc",
)

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # Tighten this before production
    allow_methods=["GET", "POST"],
    allow_headers=["*"],
)

app.include_router(router)


@app.get("/health", tags=["ops"], summary="Health check")
def health() -> dict:
    return {"status": "ok", "version": app.version}
